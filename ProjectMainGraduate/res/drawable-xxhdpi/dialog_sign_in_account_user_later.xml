<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="15dp"
        android:background="@drawable/app_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_claim_page_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_navy_bold"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:scaleX="1.1"
                android:text="Đăng kí tài khoản"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/dialog_sign_in_account_user_btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_background_icon_refresh"
                android:contentDescription="@null" />
        </RelativeLayout>

        <EditText
            android:id="@+id/dialog_sign_in_account_user_edt_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_drink_profile_post_frame"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_drink_profile_claim_title"
            android:hint="Tên tài khoản của bạn"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/gold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dialog_sign_in_account_user_edt_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_drink_profile_post_frame"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_drink_profile_claim_website"
            android:hint="Đặt mật khẩu (lớn hơn 6 kí tự)"
            android:inputType="textPassword"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/gold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dialog_sign_in_account_user_edt_fullName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_drink_profile_post_frame"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_drink_profile_claim_fullname"
            android:hint="Họ tên đầy đủ của bạn"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/gold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dialog_sign_in_account_user_edt_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_drink_profile_post_frame"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_drink_profile_claim_address"
            android:hint="Địa chỉ của bạn"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/gold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dialog_sign_in_account_user_edt_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_drink_profile_post_frame"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_drink_profile_claim_phone"
            android:hint="Số điện thoại di động"
            android:inputType="phone"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/gold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dialog_sign_in_account_user_edt_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_drink_profile_post_frame"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_drink_profile_claim_email"
            android:hint="Email của bạn"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/gold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/dialog_sign_in_account_user_tv_notice_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_alter"
                android:text=""
                android:textColor="@color/red"
                android:visibility="gone" />

            <Button
                android:id="@+id/dialog_sign_in_account_user_btn_sign_in"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_3d"
                android:gravity="center"
                android:scaleX="1.1"
                android:text="Đăng kí"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_sign_in_account_user_btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:src="@drawable/icon_close_large" />

</RelativeLayout>