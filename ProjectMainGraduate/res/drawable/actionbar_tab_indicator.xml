<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   

<!-- STATES WHEN BUTTON  -->

    <!-- Non focused states -->
    <item android:state_selected="false"
          android:state_pressed="false" android:state_focused="false"
          android:drawable="@color/tab_unselected" />
    
    <item android:state_pressed="true"
          android:state_focused="false"  android:state_selected="false"
          android:drawable="@drawable/tab_bar_background_selected_pressed" />
    
  	<item android:state_selected="true"  
  	      android:state_pressed="false"  android:state_focused="false" 
  	      android:drawable="@drawable/tab_bar_background_selected"/>
  	
</selector>







