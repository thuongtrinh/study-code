<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_claim_page_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_navy_bold"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:scaleX="1.1"
                android:text="Cập nhật số lượng sản phẩm"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="0.4"
                android:text="Số lượng còn:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/dialog_update_color_number_product_edt_number_product"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.6"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="0.4"
                android:text="Số lượng đã bán:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/dialog_update_color_number_product_edt_number_sold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.6"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >

            <Button
                android:id="@+id/dialog_update_color_number_product_btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_3d"
                android:gravity="center"
                android:padding="15dp"
                android:text="Xác nhận"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/dialog_update_color_number_product_btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border_3d"
                android:gravity="center"
                android:padding="15dp"
                android:text="Đóng"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout> <!-- android:background="@drawable/border_3d" -->
