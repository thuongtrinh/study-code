<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_border_edittext"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_head_message" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Thông tin chi tiết"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/dialog_show_infor_customer_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_btn_edit_selected" />

        <ImageButton
            android:id="@+id/dialog_show_infor_customer_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_btn_cancel_selected" />
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_navy_display_chat"
        android:padding="20dp"
        android:shrinkColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và Tên:"
                android:textColor="@color/blue_facebook"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_show_infor_customer_edt_fullName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:ems="10"
                android:enabled="false"
                android:textColor="@color/blue_facebook" >
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textColor="@color/blue_facebook"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_show_infor_customer_edt_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:ems="10"
                android:enabled="false"
                android:textColor="@color/blue_facebook" >
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Email:"
                android:textColor="@color/blue_facebook"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_show_infor_customer_edt_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:ems="10"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:textColor="@color/blue_facebook" >
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:     "
                android:textColor="@color/blue_facebook"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_show_infor_customer_edt_phone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:ems="10"
                android:enabled="false"
                android:inputType="phone"
                android:textColor="@color/blue_facebook" >
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản:"
                android:textColor="@color/blue_facebook"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_show_infor_customer_edt_account"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:ems="10"
                android:enabled="false"
                android:textColor="@color/blue_facebook" >
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu:"
                android:textColor="@color/blue_facebook"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dialog_show_infor_customer_edt_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_drink_profile_post_frame"
                android:ems="10"
                android:enabled="false"
                android:textColor="@color/blue_facebook" >
            </EditText>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_show_infor_customer_tv_notice_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_alter"
                android:gravity="center"
                android:textColor="@color/red"
                android:visibility="gone" />

            <Button
                android:id="@+id/dialog_show_infor_customer_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_btn_customer"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Lưu thay đổi"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </TableLayout>

</LinearLayout>